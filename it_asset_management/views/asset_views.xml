<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Asset Category Views -->
        <record id="view_asset_category_tree" model="ir.ui.view">
            <field name="name">it.asset.category.tree</field>
            <field name="model">it.asset.category</field>
            <field name="arch" type="xml">
                <list string="Asset Categories" default_order="sequence, name">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="parent_id"/>
                    <field name="asset_count" string="Assets"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>

        <record id="view_asset_category_form" model="ir.ui.view">
            <field name="name">it.asset.category.form</field>
            <field name="model">it.asset.category</field>
            <field name="arch" type="xml">
                <form string="Asset Category">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_assets" type="object" class="oe_stat_button" icon="fa-laptop" invisible="asset_count == 0">
                                <field name="asset_count" widget="statinfo" string="Assets"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Category Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="parent_id"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="active"/>
                                <field name="color" widget="color_picker"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" placeholder="Category description and usage guidelines..."/>
                            </page>
                            <page string="Child Categories" invisible="not child_ids">
                                <field name="child_ids" readonly="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="asset_count"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_asset_category_kanban" model="ir.ui.view">
            <field name="name">it.asset.category.kanban</field>
            <field name="model">it.asset.category</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="asset_count"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="card">
                            <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                        </div>
                                        <div class="o_kanban_record_top_right">
                                            <span class="badge text-bg-primary rounded-pill">
                                                <field name="code"/>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span class="o_kanban_record_subtitle">
                                                <i class="fa fa-laptop" title="Assets"></i> <field name="asset_count"/> Assets
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Asset Views -->
        <record id="view_asset_tree" model="ir.ui.view">
            <field name="name">it.asset.tree</field>
            <field name="model">it.asset</field>
            <field name="arch" type="xml">
                <list string="IT Assets" default_order="name"
                      decoration-success="state == 'available'"
                      decoration-info="state == 'assigned'"
                      decoration-warning="state in ('maintenance', 'repair')"
                      decoration-muted="state == 'disposed'"
                      decoration-danger="warranty_status == 'expired'">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category_id"/>
                    <field name="brand"/>
                    <field name="model"/>
                    <field name="serial_number"/>
                    <field name="assigned_user_id"/>
                    <field name="state" widget="badge"
                           decoration-success="state == 'available'"
                           decoration-info="state == 'assigned'"
                           decoration-warning="state in ('maintenance', 'repair')"
                           decoration-muted="state == 'disposed'"/>
                    <field name="warranty_status" invisible="1"/>
                    <field name="purchase_date"/>
                    <field name="location"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>

        <record id="view_asset_form" model="ir.ui.view">
            <field name="name">it.asset.form</field>
            <field name="model">it.asset</field>
            <field name="arch" type="xml">
                <form string="IT Asset">
                    <header>
                        <button name="action_set_available" string="Set Available"
                                type="object" class="btn-success"
                                invisible="state != 'draft' or current_assignment_id"/>
                        <button name="action_assign_to_user" string="Assign to User"
                                type="object" class="btn-primary"
                                invisible="state != 'available'"/>
                        <button name="action_set_maintenance" string="Set to Maintenance"
                                type="object" class="btn-warning"
                                invisible="state not in ('available', 'assigned')"/>
                        <button name="action_set_repair" string="Set to Repair"
                                type="object" class="btn-warning"
                                invisible="state not in ('available', 'assigned', 'maintenance')"/>
                        <button name="action_dispose" string="Dispose"
                                type="object" class="btn-danger"
                                invisible="state in ('disposed', 'assigned')"
                                confirm="Are you sure you want to dispose this asset?"/>
                        <button name="action_create_maintenance_request" string="Create Maintenance Request"
                                type="object" class="btn-secondary"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,available,assigned,maintenance,repair,disposed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_assignments" type="object" class="oe_stat_button"
                                    icon="fa-users" invisible="assignment_count == 0">
                                <field name="assignment_count" widget="statinfo" string="Assignments"/>
                            </button>
                            <button name="action_view_requests" type="object" class="oe_stat_button"
                                    icon="fa-list-alt" invisible="request_count == 0">
                                <field name="request_count" widget="statinfo" string="Requests"/>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Disposed" bg_color="bg-danger" invisible="state != 'disposed'"/>
                        <widget name="web_ribbon" title="Under Warranty" bg_color="bg-success" invisible="warranty_status != 'valid'"/>
                        <widget name="web_ribbon" title="Warranty Expired" bg_color="bg-danger" invisible="warranty_status != 'expired'"/>

                        <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image', 'size': [90, 90]}"/>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Asset Name"/>
                            </h1>
                            <h2>
                                <field name="code" placeholder="Asset Code" class="oe_inline"/>
                            </h2>
                        </div>

                        <group>
                            <group string="Basic Information">
                                <field name="category_id" options="{'no_create': True}"/>
                                <field name="brand"/>
                                <field name="model"/>
                                <field name="serial_number"/>
                                <field name="asset_tag"/>
                                <field name="active"/>
                            </group>
                            <group string="Assignment">
                                <field name="assigned_user_id" readonly="1"/>
                                <field name="location"/>
                                <field name="department_id"/>
                                <field name="responsible_user_id"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Technical Specifications">
                                <group>
                                    <group>
                                        <field name="operating_system"/>
                                        <field name="processor"/>
                                        <field name="memory_ram"/>
                                        <field name="storage"/>
                                    </group>
                                    <group>
                                        <field name="network_name"/>
                                        <field name="ip_address"/>
                                    </group>
                                </group>
                                <separator string="Detailed Specifications"/>
                                <field name="specifications" placeholder="Enter detailed technical specifications..."/>
                            </page>

                            <page string="Purchase Information">
                                <group>
                                    <group string="Purchase Details">
                                        <field name="purchase_date"/>
                                        <field name="purchase_price"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="supplier_id"/>
                                        <field name="invoice_reference"/>
                                    </group>
                                    <group string="Warranty Information">
                                        <field name="warranty_type"/>
                                        <field name="warranty_start"/>
                                        <field name="warranty_end"/>
                                        <field name="warranty_status" widget="badge"
                                               decoration-success="warranty_status == 'valid'"
                                               decoration-warning="warranty_status == 'expiring'"
                                               decoration-danger="warranty_status == 'expired'"
                                               decoration-muted="warranty_status == 'none'"/>
                                    </group>
                                </group>
                                <group string="Warranty Description">
                                    <field name="warranty_description" nolabel="1" placeholder="Warranty terms and conditions..."/>
                                </group>
                            </page>

                            <page string="Assignment History">
                                <field name="assignment_ids" readonly="1">
                                    <list decoration-success="is_active" decoration-muted="not is_active">
                                        <field name="user_id"/>
                                        <field name="assignment_date"/>
                                        <field name="expected_return_date"/>
                                        <field name="return_date"/>
                                        <field name="is_active" widget="boolean_toggle"/>
                                        <field name="state" widget="badge"/>
                                        <field name="condition_on_assignment"/>
                                        <field name="condition_on_return"/>
                                    </list>
                                </field>
                            </page>

                            <page string="Maintenance">
                                <group>
                                    <group>
                                        <field name="last_maintenance_date"/>
                                        <field name="next_maintenance_date"/>
                                    </group>
                                    <group>
                                        <field name="age_days" string="Age (Days)"/>
                                    </group>
                                </group>
                                <group string="Maintenance Notes">
                                    <field name="maintenance_notes" nolabel="1" placeholder="Maintenance history and notes..."/>
                                </group>
                            </page>

                            <page string="QR Code &amp; Barcode">
                                <div class="row">
                                    <div class="col-md-6">
                                        <group string="QR Code">
                                            <div class="o_field_widget o_field_image oe_avatar">
                                                <field name="qr_code" widget="image" options="{'size': [200, 200]}"/>
                                            </div>
                                            <field name="qr_data" readonly="1"/>
                                            <div class="oe_button_box">
                                                <button name="action_generate_qr_code" string="Generate QR Code"
                                                        type="object" class="btn-primary"/>
                                                <button name="action_print_qr_code" string="Print QR Code"
                                                        type="object" class="btn-secondary"
                                                        invisible="not qr_code"/>
                                            </div>
                                        </group>
                                    </div>
                                    <div class="col-md-6">
                                        <group string="Barcode">
                                            <field name="barcode"/>
                                            <div class="o_field_widget o_field_image">
                                                <field name="barcode_image" widget="image" options="{'size': [300, 100]}"/>
                                            </div>
                                            <div class="oe_button_box">
                                                <button name="action_generate_barcode" string="Generate Barcode"
                                                        type="object" class="btn-primary"/>
                                                <button name="action_print_barcode" string="Print Barcode"
                                                        type="object" class="btn-secondary"
                                                        invisible="not barcode_image"/>
                                            </div>
                                        </group>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-12">
                                        <div class="oe_button_box">
                                            <button name="action_print_asset_label" string="Print Asset Label"
                                                    type="object" class="btn-success"
                                                    invisible="not qr_code and not barcode_image"/>
                                        </div>
                                    </div>
                                </div>
                            </page>

                            <page string="Notes">
                                <field name="notes" placeholder="Additional notes and information about this asset..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="view_asset_kanban" model="ir.ui.view">
            <field name="name">it.asset.kanban</field>
            <field name="model">it.asset</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category_id"/>
                    <field name="brand"/>
                    <field name="model"/>
                    <field name="assigned_user_id"/>
                    <field name="state"/>
                    <field name="warranty_status"/>
                    <field name="image"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="record.image.value and '/web/image?model=it.asset&amp;field=image&amp;id=' + record.id.raw_value || '/web/static/img/placeholder.png'"
                                         alt="Asset" class="o_image_64_contain"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_top">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                            </strong>
                                            <br/>
                                            <span class="o_kanban_record_subtitle">
                                                <field name="code"/>
                                            </span>
                                        </div>
                                        <div class="o_kanban_record_top_right">
                                            <div class="o_kanban_record_badges">
                                                <span t-if="record.warranty_status.raw_value == 'expired'"
                                                      class="badge text-bg-danger">Warranty Expired</span>
                                                <span t-if="record.warranty_status.raw_value == 'expiring'"
                                                      class="badge text-bg-warning">Warranty Expiring</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div class="o_kanban_record_info">
                                            <div class="o_kanban_record_subtitle">
                                                <i class="fa fa-tag" title="Category"></i> <field name="category_id"/>
                                            </div>
                                            <div t-if="record.brand.raw_value or record.model.raw_value">
                                                <i class="fa fa-industry" title="Brand/Model"></i>
                                                <field name="brand"/> <field name="model"/>
                                            </div>
                                            <div t-if="record.assigned_user_id.raw_value">
                                                <i class="fa fa-user" title="Assigned User"></i> <field name="assigned_user_id"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_asset_search" model="ir.ui.view">
            <field name="name">it.asset.search</field>
            <field name="model">it.asset</field>
            <field name="arch" type="xml">
                <search string="Search Assets">
                    <field name="name" string="Asset Name/Code"
                           filter_domain="['|', '|', ('name', 'ilike', self), ('code', 'ilike', self), ('serial_number', 'ilike', self)]"/>
                    <field name="category_id"/>
                    <field name="brand"/>
                    <field name="model"/>
                    <field name="assigned_user_id"/>
                    <field name="location"/>
                    <field name="supplier_id"/>

                    <filter string="Available" name="available" domain="[('state', '=', 'available')]"/>
                    <filter string="Assigned" name="assigned" domain="[('state', '=', 'assigned')]"/>
                    <filter string="Under Maintenance" name="maintenance" domain="[('state', '=', 'maintenance')]"/>
                    <filter string="Under Repair" name="repair" domain="[('state', '=', 'repair')]"/>
                    <filter string="Disposed" name="disposed" domain="[('state', '=', 'disposed')]"/>

                    <separator/>
                    <filter string="Under Warranty" name="warranty_valid" domain="[('warranty_status', '=', 'valid')]"/>
                    <filter string="Warranty Expiring" name="warranty_expiring" domain="[('warranty_status', '=', 'expiring')]"/>
                    <filter string="Warranty Expired" name="warranty_expired" domain="[('warranty_status', '=', 'expired')]"/>

                    <separator/>
                    <filter string="My Assets" name="my_assets" domain="[('assigned_user_id', '=', uid)]"/>
                    <filter string="Unassigned" name="unassigned" domain="[('assigned_user_id', '=', 0)]"/>

                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', 1)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', 0)]"/>

                    <group expand="1" string="Group By">
                        <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Assigned User" name="group_user" context="{'group_by': 'assigned_user_id'}"/>
                        <filter string="Brand" name="group_brand" context="{'group_by': 'brand'}"/>
                        <filter string="Location" name="group_location" context="{'group_by': 'location'}"/>
                        <filter string="Warranty Status" name="group_warranty" context="{'group_by': 'warranty_status'}"/>
                        <filter string="Purchase Date" name="group_purchase_date" context="{'group_by': 'purchase_date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Actions -->
        <record id="action_asset" model="ir.actions.act_window">
            <field name="name">IT Assets</field>
            <field name="res_model">it.asset</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="search_view_id" ref="view_asset_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first IT asset!
                </p>
                <p>
                    Track and manage your company's IT assets including computers, servers,
                    mobile devices, software licenses, and other equipment.
                </p>
            </field>
        </record>

        <record id="action_asset_available" model="ir.actions.act_window">
            <field name="name">Available Assets</field>
            <field name="res_model">it.asset</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[('state', '=', 'available')]</field>
            <field name="context">{'search_default_available': 1}</field>
        </record>

        <record id="action_asset_assigned" model="ir.actions.act_window">
            <field name="name">Assigned Assets</field>
            <field name="res_model">it.asset</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('state', '=', 'assigned')]</field>
            <field name="context">{'search_default_assigned': 1}</field>
        </record>

        <record id="action_asset_maintenance" model="ir.actions.act_window">
            <field name="name">Assets Under Maintenance</field>
            <field name="res_model">it.asset</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('state', 'in', ['maintenance', 'repair'])]</field>
        </record>

        <record id="action_asset_category" model="ir.actions.act_window">
            <field name="name">Asset Categories</field>
            <field name="res_model">it.asset.category</field>
            <field name="view_mode">list,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first asset category!
                </p>
                <p>
                    Organize your assets by creating categories such as Computers,
                    Servers, Mobile Devices, Software Licenses, etc.
                </p>
            </field>
        </record>

    </data>
</odoo>