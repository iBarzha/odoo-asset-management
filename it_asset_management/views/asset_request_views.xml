<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Asset Request Views -->
        <record id="view_asset_request_tree" model="ir.ui.view">
            <field name="name">it.asset.request.tree</field>
            <field name="model">it.asset.request</field>
            <field name="arch" type="xml">
                <list string="Asset Requests" default_order="create_date desc"
                      decoration-info="state == 'submitted'"
                      decoration-success="state in ('approved', 'completed')"
                      decoration-warning="state == 'in_progress'"
                      decoration-danger="state == 'rejected'"
                      decoration-muted="state == 'cancelled'"
                      decoration-bf="is_overdue">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="request_type" widget="badge"/>
                    <field name="category_id"/>
                    <field name="asset_id" optional="hide"/>
                    <field name="priority" widget="priority"/>
                    <field name="urgency" optional="hide"/>
                    <field name="state" widget="badge"
                           decoration-info="state == 'submitted'"
                           decoration-success="state in ('approved', 'completed')"
                           decoration-warning="state == 'in_progress'"
                           decoration-danger="state == 'rejected'"/>
                    <field name="request_date"/>
                    <field name="required_date" optional="hide"/>
                    <field name="deadline"/>
                    <field name="assigned_to_id" optional="hide"/>
                    <field name="approver_id" optional="hide"/>
                    <field name="days_open" optional="hide"/>
                    <field name="is_overdue" invisible="1"/>
                    <field name="estimated_cost" optional="hide" sum="Total Estimated Cost"/>
                    <field name="actual_cost" optional="hide" sum="Total Actual Cost"/>
                    <button name="action_approve" type="object" string="Approve"
                            class="btn-success btn-sm"
                            invisible="state != 'submitted'"
                            groups="it_asset_management.group_asset_manager"/>
                    <button name="action_reject" type="object" string="Reject"
                            class="btn-danger btn-sm"
                            invisible="state != 'submitted'"
                            groups="it_asset_management.group_asset_manager"/>
                </list>
            </field>
        </record>

        <record id="view_asset_request_form" model="ir.ui.view">
            <field name="name">it.asset.request.form</field>
            <field name="model">it.asset.request</field>
            <field name="arch" type="xml">
                <form string="Asset Request">
                    <header>
                        <button name="action_submit" string="Submit Request"
                                type="object" class="btn-primary"
                                invisible="state != 'draft'"/>
                        <button name="action_review" string="Start Review"
                                type="object" class="btn-info"
                                invisible="state != 'submitted'"
                                groups="it_asset_management.group_asset_manager"/>
                        <button name="action_approve" string="Approve"
                                type="object" class="btn-success"
                                invisible="state not in ['submitted', 'under_review']"
                                groups="it_asset_management.group_asset_manager"/>
                        <button name="action_reject" string="Reject"
                                type="object" class="btn-danger"
                                invisible="state not in ['submitted', 'under_review']"
                                groups="it_asset_management.group_asset_manager"/>
                        <button name="action_start_work" string="Start Work"
                                type="object" class="btn-primary"
                                invisible="state != 'approved'"
                                groups="it_asset_management.group_asset_user"/>
                        <button name="action_complete" string="Complete"
                                type="object" class="btn-success"
                                invisible="state != 'in_progress'"
                                groups="it_asset_management.group_asset_user"/>
                        <button name="action_cancel" string="Cancel"
                                type="object" class="btn-secondary"
                                invisible="state in ['completed', 'cancelled']"
                                confirm="Are you sure you want to cancel this request?"/>
                        <button name="action_reset_to_draft" string="Reset to Draft"
                                type="object" class="btn-secondary"
                                invisible="state not in ['submitted', 'rejected']"
                                groups="it_asset_management.group_asset_manager"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,submitted,approved,in_progress,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_asset" type="object" class="oe_stat_button"
                                    icon="fa-laptop" invisible="not asset_id">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">View Asset</span>
                                </div>
                            </button>
                            <button type="object" name="action_get_attachment_tree_view" class="oe_stat_button"
                                    icon="fa-files-o" invisible="attachment_count == 0">
                                <field name="attachment_count" widget="statinfo" string="Files"/>
                            </button>
                        </div>

                        <widget name="web_ribbon" title="Overdue" bg_color="bg-danger" invisible="not is_overdue"/>
                        <widget name="web_ribbon" title="Completed" bg_color="bg-success" invisible="state != 'completed'"/>
                        <widget name="web_ribbon" title="Rejected" bg_color="bg-danger" invisible="state != 'rejected'"/>
                        <widget name="web_ribbon" title="Urgent" bg_color="bg-warning"
                                invisible="priority != 'urgent' and urgency != 'critical'"/>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                            <h2>
                                <field name="request_type" widget="radio" options="{'horizontal': true}"
                                       readonly="state != 'draft'"/>
                            </h2>
                        </div>

                        <group>
                            <group string="Request Information">
                                <field name="user_id" readonly="state != 'draft'"/>
                                <field name="department_id" readonly="1"/>
                                <field name="category_id" invisible="request_type == 'return'" readonly="state != 'draft'"/>
                                <field name="asset_id"
                                       invisible="request_type == 'new_asset'" readonly="state != 'draft'"
                                       domain="[('category_id', '=', category_id)]"
                                       context="{'default_category_id': category_id}"/>
                            </group>
                            <group string="Priority &amp; Timing">
                                <field name="priority" widget="priority" readonly="state != 'draft'"/>
                                <field name="urgency" readonly="state != 'draft'"/>
                                <field name="request_date" readonly="1"/>
                                <field name="required_date" readonly="state != 'draft'"/>
                                <field name="deadline" readonly="1"/>
                                <field name="days_open" readonly="1"/>
                                <field name="is_overdue" readonly="1" widget="boolean"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Request Details">
                                <group string="Description">
                                    <field name="description" nolabel="1"
                                           placeholder="Describe your request in detail..."
                                           readonly="state not in ['draft']"/>
                                </group>
                                <group string="Business Justification">
                                    <field name="justification" nolabel="1"
                                           placeholder="Explain why this request is necessary for business operations..."
                                           readonly="state not in ['draft']"/>
                                </group>
                                <group string="Technical Specifications"
                                       invisible="request_type not in ['new_asset', 'replacement', 'upgrade']">
                                    <field name="specifications" nolabel="1"
                                           placeholder="Specify technical requirements, preferred brands, models, etc..."
                                           readonly="state not in ['draft']"/>
                                    <field name="preferred_brand" readonly="state != 'draft'"/>
                                    <field name="preferred_model" readonly="state != 'draft'"/>
                                </group>
                            </page>

                            <page string="Approval &amp; Assignment">
                                <group>
                                    <group string="Workflow">
                                        <field name="approver_id" readonly="1"/>
                                        <field name="approval_date" readonly="1"/>
                                        <field name="assigned_to_id"
                                               readonly="state not in ['approved', 'under_review']"
                                               groups="it_asset_management.group_asset_manager"/>
                                        <field name="start_date" readonly="1"/>
                                        <field name="completion_date" readonly="1"/>
                                    </group>
                                    <group string="Cost Information">
                                        <field name="estimated_cost"
                                               readonly="state not in ['submitted', 'under_review', 'approved']"
                                               groups="it_asset_management.group_asset_manager"/>
                                        <field name="actual_cost"
                                               readonly="state not in ['in_progress', 'completed']"
                                               groups="it_asset_management.group_asset_user"/>
                                        <field name="currency_id" invisible="1"/>
                                    </group>
                                </group>

                                <group string="Approval Notes"
                                       invisible="state not in ['approved', 'rejected', 'completed']">
                                    <field name="approval_notes" nolabel="1"
                                           readonly="state not in ['submitted', 'under_review']"
                                           groups="it_asset_management.group_asset_manager"/>
                                </group>

                                <group string="Rejection Reason" invisible="state != 'rejected'">
                                    <field name="rejection_reason" nolabel="1" readonly="1"/>
                                </group>

                                <group string="Progress Notes"
                                       invisible="state not in ['in_progress', 'completed']">
                                    <field name="progress_notes" nolabel="1"
                                           readonly="state not in ['in_progress']"
                                           groups="it_asset_management.group_asset_user"/>
                                </group>

                                <group string="Completion Notes" invisible="state != 'completed'">
                                    <field name="completion_notes" nolabel="1" readonly="1"/>
                                </group>

                                <group string="Internal Notes" groups="it_asset_management.group_asset_user">
                                    <field name="internal_notes" nolabel="1"
                                           placeholder="Internal notes for IT team..."/>
                                </group>
                            </page>

                            <page string="Attachments">
                                <field name="attachment_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="file_size" widget="file_size"/>
                                        <field name="create_date"/>
                                        <field name="create_uid"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="view_asset_request_kanban" model="ir.ui.view">
            <field name="name">it.asset.request.kanban</field>
            <field name="model">it.asset.request</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column" quick_create="false">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="request_type"/>
                    <field name="priority"/>
                    <field name="urgency"/>
                    <field name="state"/>
                    <field name="request_date"/>
                    <field name="deadline"/>
                    <field name="is_overdue"/>
                    <field name="assigned_to_id"/>
                    <field name="can_approve"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <br/>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="request_type"/>
                                        </span>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <div class="o_kanban_record_badges">
                                            <span t-if="record.is_overdue.raw_value" class="badge text-bg-danger">Overdue</span>
                                            <span t-if="record.priority.raw_value == 'urgent'" class="badge text-bg-warning">Urgent</span>
                                            <span t-if="record.urgency.raw_value == 'critical'" class="badge text-bg-danger">Critical</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_record_info">
                                        <div>
                                            <i class="fa fa-user" title="User"></i> <field name="user_id"/>
                                        </div>
                                        <div>
                                            <i class="fa fa-calendar" title="Request Date"></i> <field name="request_date" widget="date"/>
                                        </div>
                                        <div t-if="record.deadline.raw_value">
                                            <i class="fa fa-clock-o" title="Deadline"></i> Deadline: <field name="deadline" widget="date"/>
                                        </div>
                                        <div t-if="record.assigned_to_id.raw_value">
                                            <i class="fa fa-wrench" title="Assigned To"></i> <field name="assigned_to_id"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <button name="action_approve" type="object"
                                                class="btn btn-success btn-sm"
                                                t-if="record.can_approve.raw_value and record.state.raw_value == 'submitted'">
                                            Approve
                                        </button>
                                        <button name="action_start_work" type="object"
                                                class="btn btn-primary btn-sm"
                                                t-if="record.state.raw_value == 'approved'">
                                            Start
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_asset_request_search" model="ir.ui.view">
            <field name="name">it.asset.request.search</field>
            <field name="model">it.asset.request</field>
            <field name="arch" type="xml">
                <search string="Search Asset Requests">
                    <field name="name" string="Request Number"/>
                    <field name="user_id" string="Requested By"/>
                    <field name="description" string="Description"/>
                    <field name="category_id"/>
                    <field name="asset_id"/>
                    <field name="assigned_to_id"/>
                    <field name="approver_id"/>

                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                    <filter string="Under Review" name="under_review" domain="[('state', '=', 'under_review')]"/>
                    <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                    <filter string="Completed" name="completed" domain="[('state', '=', 'completed')]"/>
                    <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>

                    <separator/>
                    <filter string="New Asset" name="new_asset" domain="[('request_type', '=', 'new_asset')]"/>
                    <filter string="Repair" name="repair" domain="[('request_type', '=', 'repair')]"/>
                    <filter string="Replacement" name="replacement" domain="[('request_type', '=', 'replacement')]"/>
                    <filter string="Return" name="return" domain="[('request_type', '=', 'return')]"/>
                    <filter string="Upgrade" name="upgrade" domain="[('request_type', '=', 'upgrade')]"/>

                    <separator/>
                    <filter string="High Priority" name="high_priority" domain="[('priority', 'in', ['high', 'urgent'])]"/>
                    <filter string="Overdue" name="overdue" domain="[('is_overdue', '=', 1)]"/>
                    <filter string="My Requests" name="my_requests" domain="[('user_id', '=', uid)]"/>
                    <filter string="Assigned to Me" name="assigned_to_me" domain="[('assigned_to_id', '=', uid)]"/>

                    <separator/>
                    <filter string="This Week" name="this_week"
                            domain="[('request_date', '>=', (context_today() - relativedelta(weeks=1)).strftime('%Y-%m-%d'))]"/>
                    <filter string="This Month" name="this_month"
                            domain="[('request_date', '>=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>

                    <group expand="1" string="Group By">
                        <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                        <filter string="Request Type" name="group_type" context="{'group_by': 'request_type'}"/>
                        <filter string="Requested By" name="group_user" context="{'group_by': 'user_id'}"/>
                        <filter string="Assigned To" name="group_assigned" context="{'group_by': 'assigned_to_id'}"/>
                        <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                        <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                        <filter string="Request Date" name="group_request_date" context="{'group_by': 'request_date'}"/>
                        <filter string="Department" name="group_department" context="{'group_by': 'department_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Request Calendar View -->
        <record id="view_asset_request_calendar" model="ir.ui.view">
            <field name="name">it.asset.request.calendar</field>
            <field name="model">it.asset.request</field>
            <field name="arch" type="xml">
                <calendar string="Request Calendar" date_start="request_date" date_stop="deadline"
                          color="state" mode="month">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="request_type"/>
                    <field name="priority"/>
                </calendar>
            </field>
        </record>

        <!-- Request Pivot View -->
        <record id="view_asset_request_pivot" model="ir.ui.view">
            <field name="name">it.asset.request.pivot</field>
            <field name="model">it.asset.request</field>
            <field name="arch" type="xml">
                <pivot string="Request Analysis">
                    <field name="request_type" type="row"/>
                    <field name="state" type="row"/>
                    <field name="request_date" type="col" interval="month"/>
                    <field name="days_open" type="measure"/>
                    <field name="estimated_cost" type="measure"/>
                    <field name="actual_cost" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Request Graph View -->
        <record id="view_asset_request_graph" model="ir.ui.view">
            <field name="name">it.asset.request.graph</field>
            <field name="model">it.asset.request</field>
            <field name="arch" type="xml">
                <graph string="Request Statistics" type="bar">
                    <field name="request_date" type="row" interval="month"/>
                    <field name="state" type="col"/>
                </graph>
            </field>
        </record>

        <!-- Actions -->
        <record id="action_asset_request" model="ir.actions.act_window">
            <field name="name">Asset Requests</field>
            <field name="res_model">it.asset.request</field>
            <field name="view_mode">kanban,list,form,calendar,pivot,graph</field>
            <field name="search_view_id" ref="view_asset_request_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first asset request!
                </p>
                <p>
                    Submit requests for new assets, repairs, replacements, or returns.
                    Track the approval process and completion status.
                </p>
            </field>
        </record>

        <record id="action_asset_request_pending" model="ir.actions.act_window">
            <field name="name">Pending Approval</field>
            <field name="res_model">it.asset.request</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[('state', 'in', ['submitted', 'under_review'])]</field>
            <field name="context">{'search_default_submitted': 1}</field>
        </record>

        <record id="action_asset_request_approved" model="ir.actions.act_window">
            <field name="name">Approved Requests</field>
            <field name="res_model">it.asset.request</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[('state', 'in', ['approved', 'in_progress'])]</field>
            <field name="context">{'search_default_approved': 1}</field>
        </record>

        <record id="action_my_asset_requests" model="ir.actions.act_window">
            <field name="name">My Asset Requests</field>
            <field name="res_model">it.asset.request</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[('user_id', '=', uid)]</field>
            <field name="context">{'search_default_my_requests': 1}</field>
        </record>

        <record id="action_assigned_requests" model="ir.actions.act_window">
            <field name="name">Assigned to Me</field>
            <field name="res_model">it.asset.request</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="domain">[('assigned_to_id', '=', uid)]</field>
            <field name="context">{'search_default_assigned_to_me': 1}</field>
        </record>

    </data>
</odoo>